<%= javascript_include_tag 'jquery.dataTables.min', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'bootstrap', 'data-turbolinks-track' => true %>

<h1 class="x_title">
  <i class="glyphicon glyphicon-leaf titleicon"></i>
  Listar empresas prestadoras de servicio
</h1>

<%= link_to new_admin_company_path , :class =>"btn btn-dark pull-right" do%>
  <span class="glyphicon glyphicon-pencil"></span>
  Crear empresa prestadora de servicio
<% end %>

<table id="datatable" class="display datatable" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Nit</th>
      <th>Nombre</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.nit %></td>
        <td><%= company.name %></td>
        <td>
          <%= link_to admin_company_path(company),:class =>"btn btn-default btn-sm" do %>
            <span class="glyphicon glyphicon-eye-open"></span>
            Ver
          <% end %>

          <%= link_to edit_admin_company_path(company),:class =>"btn btn-default btn-sm" do %>
            <span class="glyphicon glyphicon-pencil"></span>
            Editar
          <% end %>

          <%= link_to admin_company_path(company),:class =>"btn btn-default btn-sm", method: :delete, data: { confirm: 'Â¿Seguro desea eliminar el sublote?' } do %>
            <span class="glyphicon glyphicon-trash"></span>
            Eliminar
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<script>
$('#datatable').DataTable({
              "language": {
                "url": "../files/spanish"
