<h1 class="x_title">
  <i class="glyphicon glyphicon-leaf titleicon"></i>
  Editar configuraciones básicas
</h1>

<%= form_for @config, url:{action: "update"} do |f| %>
  <% if @config.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@config.errors.count, "error") %> prohibited this config from being saved:</h2>
    <ul>
      <% @config.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="form-group col-md-12 field">
    <div class="col-md-6">
      <%= f.label :basepay , "Salario mínimo" %>
      <%= f.text_field :basepay, class:"form-control" %>
    </div>
  </div>

  <div class="form-group col-md-12 field">
    <div class="col-md-6">
      <%= f.label :transportAllowance , "Auxilio de transporte" %>
      <%= f.text_field :transportAllowance, class:"form-control" %>
    </div>
  </div>

  <div class="form-group col-md-12 field">
    <div class="col-md-12">
      <%= button_tag(:type => 'submit', :class => 'btn btn-dark') do %>
        <i class="glyphicon glyphicon-floppy-disk"></i>
        Editar configuraciones 
      <% end %>
      <%= link_to admin_index_config_path ,:class =>"btn btn-danger" do %>
        <span class="glyphicon glyphicon-remove"></span>
        Cancelar
      <% end %>
    </div>
  </div>

<% end %>