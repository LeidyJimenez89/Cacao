});
</script>


<script>
$(function(){
  $("#flip-1").on("change", function(){
    if ($(this).val() == "off"){
      $("#estado").html("Sistema Apagado");}
    else{
      $("#estado").html("Sistema Encendido");}
  });
});
</script>