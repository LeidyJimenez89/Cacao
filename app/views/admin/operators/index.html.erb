<%= javascript_include_tag 'jquery.dataTables.min', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'bootstrap', 'data-turbolinks-track' => true %>

<h1 class="x_title"><i class="glyphicon glyphicon-leaf titleicon"></i>Listar Operadores</h1>
<%= link_to 'Crear operador', new_admin_operator_path , :class =>"btn btn-default pull-right"%>
<table id="datatable" class="display datatable" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>CÃ©dula</th>
      <th>Nombre</th>
      <th>Cargo</th>
      <th>Fecha de ingreso</th>
      <th>Fecha de retiro</th>
      <th>Estado</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @operators.each do |operator| %>
      <tr>
        <td><%= operator.cc %></td>
        <td><%= operator.name.to_s + " " + operator.lastname.to_s%></td>
        <td><%= operator.jobs.map { |e| e.name }.join("<br>").html_safe %></td>
        <td><%= operator.dateadmission %></td>
        <% retire = operator.records.where(state: "Retirado").order("id desc").first %>
        <% if retire.present? %>
          <td><%= operator.records.where(state: "Retirado").order("id desc").first.retirementdate %></td>
        <% else %>
          <td></td>
        <% end %>
        <td><%= operator.state %></td>
        <td>
        <%= link_to 'Ver', admin_operator_path(operator),:class =>"btn btn-default btn-sm" %>      
        <%= link_to 'Editar', edit_admin_operator_path(operator) ,:class =>"btn btn-default btn-sm"%>
        <%= link_to 'Eliminar', admin_operator_path(operator),:class =>"btn btn-default btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %>
        <%if operator.state=="Activo"%>
          <%= link_to 'Retirar', admin_retire_operator_path(operator),:class =>"btn btn-default btn-sm" %>
        <%end%>
        <%if operator.state=="Retirado" and operator.retirementdate != " "%>
          <%= link_to 'Reintegrar', admin_reinstate_operator_path(operator),:class =>"btn btn-default btn-sm" %>
        <%end%>
        <%if operator.state=="Reintegrado" and operator.retirementdate != " "%>
          <%= link_to 'Retirar', admin_retire_operator_path(operator),:class =>"btn btn-default btn-sm" %>
        <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

