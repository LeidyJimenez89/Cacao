<%= javascript_include_tag 'jquery.dataTables.min', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'bootstrap', 'data-turbolinks-track' => true %>

<h1 class="x_title"><i class="glyphicon glyphicon-leaf titleicon"></i>Historial de contratación de empleados</h1>
<table id="datatable" class="display datatable" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Cédula</th>
      <th>Nombre</th>
      <th>Estado</th>
      <th>Fecha</th>
      <th>Descripción</th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
        <% if record.operator.present? %>
        <tr>
          <td><%= record.operator.cc %></td>
          <td><%= record.operator.name  + " " + record.operator.lastname %></td>
          <td><%= record.state %></td>
          <% if record.operator.dateadmission.present? and record.operator.retirementdate.present? %>
            <td><%= record.operator.retirementdate %></td>
          <% elsif record.operator.dateadmission.present? and record.operator.retirementdate.blank? %>
            <td><%= record.operator.dateadmission %></td>
          <% end %>
          <td><%= record.description %></td>
        </tr>
    <% end %>

    <% end %>
  </tbody>
</table>

<script>
$('#datatable').DataTable({
              "language": {
                "url": "../files/spanish"
            }
