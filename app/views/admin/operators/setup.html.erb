<h1 class="x_title">
  <i class="glyphicon glyphicon-leaf titleicon"></i>
  Configuración básica
</h1>
<%= form_for @operator, url:{action: "configured"}, html:{method: "post"} do |f| %>
  <% if @operator.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@operator.errors.count, "error") %> prohibited this operator from being saved:</h2>
      <ul>
      	<% @operator.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group col-md-12 field">
	  <div class="col-md-6">
	    <%= f.label :retirementdate, "Fecha de retiro" %>
	    <%= f.text_field :retirementdate , class:"form-control"%>
    </div>
    <div class="form-group col-md-6">
      <%= f.label :description, "Motivo" %>
      <%= f.text_area :description , class:"form-control"%>
    </div>
  </div>
  <div class="form-group col-md-12 field">
    <div class="col-md-12">
      <%= button_tag(:type => 'submit', :class => 'btn btn-dark') do %>
        <i class="glyphicon glyphicon-floppy-disk"></i>
        Retirar operario 
      <% end %>
      <%= link_to admin_operators_path ,:class =>"btn btn-danger" do %>
        <span class="glyphicon glyphicon-remove"></span>
        Cancelar
      <% end %>
    </div>
  </div>
<% end %>

<script>
$('#operator_retirementdate').datepicker({dateFormat:'yy-mm-dd'});
</script>