<%= stylesheet_link_tag    'selectize.bootstrap3', media: 'all', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'selectize', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'plugin', 'data-turbolinks-track' => true %>

<h1 class="x_title">
  <i class="glyphicon glyphicon-leaf titleicon"></i>
  Novedades mensuales
</h1>

<%= form_for @registration , url:{action: "create"} do |f| %>

<div class=" form-group col-md-12 field">
  <div class="col-md-4">
    <%= f.label :registerDate, "Fecha de registro" %>
    <%= f.text_field :registerDate , class:"form-control"%>
  </div>
  <div class="col-md-4">
  </div>
  <div class="col-md-4 ">
    <%= link_to admin_edit_config_path , :class =>"btn btn-dark pull-right" do%>
      <span class="glyphicon glyphicon-pencil"></span>
      Editar novedades
    <% end %>
  </div>
</div>
<br>
<br>
<br>
<br>
<br>

<div class=" form-group col-md-12 field">
  <div style="overflow-x:scroll; overflow-y:hidden" >
      <table class="table table-bordered"  cellspacing="0" >
        <thead>
          <tr>
            <th width="400">Cédula</th>
            <th width="400">Empleado</th>
            <th width="200">Auxilio de Rodamiento No Prestacional</th>
            <th width="100">Auxilio de Vivienda No Prestacional</th>
            <th width="100">Auxilio de Alimentación No Prestacional</th>
            <th width="100">Sanción</th>
            <th width="100">Licencia Materna/Paterna</th>
            <th width="100">Auxilio Extra Legal Fijo</th>
            <th width="100">Comisión Venta Fijo</th>
            <th width="100">Auxilio de Alimentacion</th>
            <th width="100">Descuento Cliente</th>
            <th width="100">Subsidio de transporte</th>
          </tr>
        </thead>

        <tbody>
          <% @operators.each do |operator| %>
          <tr>
            <td><%= operator.cc %></td>
            <td><%= operator.name + " " + operator.lastname %></td>
            <td>
              <%= f.text_field :vehicleAllowance , class:"form-control"%>
            </td>
            <td>
              <%= f.text_field :housingAllowance , class:"form-control"%>
            </td>
            <td>
              <%= f.text_field :feedingAllowancen , class:"form-control"%>
            </td>
            <td>
              <%= f.text_field :sanction , class:"form-control"%>          
            </td>
            <td>
              <%= f.label :childrenLicenseSince , "Desde" %>
              <%= f.text_field :childrenLicenseSince , class:"form-control"%>
              <%= f.label :childrenLicenseUntil , "Hasta" %>
              <%= f.text_field :childrenLicenseUntil , class:"form-control"%>          
            </td>
            <td>
              <%= f.text_field :extraLegalAllowance , class:"form-control"%>          
            </td>
            <td>
              <%= f.text_field :salesCommision , class:"form-control"%>          
            </td>
            <td>
              <%= f.text_field :feedingAllowance , class:"form-control"%>          
            </td>
            <td>
              <%= f.text_field :customerDiscount , class:"form-control"%>          
            </td>
            <td>
              <%= f.text_field :transportAllowance , class:"form-control"%>          
            </td>
          </tr>
        <% end %>

        <% @supervisors.each do |supervisor| %>
          <tr>
            <td><%= supervisor.cc %></td>
            <td><%= supervisor.name + " " + supervisor.lastname %></td>
            <td>
              <%= f.text_field :vehicleAllowance , class:"form-control"%>
            </td>
            <td>
              <%= f.text_field :housingAllowance , class:"form-control"%>
            </td>
            <td>
              <%= f.text_field :feedingAllowance , class:"form-control"%>
            </td>
            <td>
              <%= f.text_field :sanction , class:"form-control"%>          
            </td>
            <td>
              <%= f.label :childrenLicenseSince , "Desde" %>
              <%= f.text_field :childrenLicenseSince , class:"form-control"%>
              <%= f.label :childrenLicenseUntil , "Hasta" %>
              <%= f.text_field :childrenLicenseUntil , class:"form-control"%>           
            </td>
            <td>
              <%= f.text_field :extraLegalAllowance , class:"form-control"%>          
            </td>
            <td>
              <%= f.text_field :salesCommision , class:"form-control"%>          
            </td>
            <td>
              <%= f.text_field :feedingAllowance , class:"form-control"%>          
            </td>
            <td>
              <%= f.text_field :customerDiscount , class:"form-control"%>          
            </td>
            <td>
              <%= f.text_field :transportAllowance , class:"form-control"%>          
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>


    <div class="form-group col-md-12 field">
      <div class="col-md-6">
        <%= button_tag(:type => 'submit', :class => 'btn btn-dark') do %>
          <i class="glyphicon glyphicon-floppy-disk"></i>
          Enviar 
        <% end %>
      </div>
      <div class="col-md-6">
        <%= link_to admin_edit_register_path ,:class =>"btn btn-danger" do %>
          <span class="glyphicon glyphicon-remove"></span>
          Cancelar
        <% end %>
      </div>
    </div>
    <% end %>

  </div>
</div>

<script type="text/javascript">
$('#register_registerDate').datepicker({ dateFormat:'yy-mm-dd'});
</script>

