<%= javascript_include_tag 'jquery.dataTables.min', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'bootstrap', 'data-turbolinks-track' => true %>

<h1 class="x_title"><i class="glyphicon glyphicon-leaf titleicon"></i>Listar Sublotes</h1>
<%= link_to 'Crear sublote', new_sublot_path , :class =>"btn btn-default pull-right"%>
<table id="datatable" class="display datatable" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Código</th>
      <th>Nombre</th>
      <th>Descripción</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @sublots.each do |sublot| %>
      <tr>
        <td><%= sublot.code %></td>
        <td><%= sublot.name %></td>
        <td><%= sublot.description %></td>
        <td>
        <%= link_to 'Show', sublot_path(sublot),:class =>"btn btn-default btn-sm" %>
        <%= link_to 'Edit', edit_sublot_path(sublot),:class =>"btn btn-default btn-sm" %>
        <%= link_to 'Destroy', sublot_path(sublot),:class =>"btn btn-default btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<script>
$('#datatable').DataTable({
              "language": {
                "url": "../files/spanish"
            }
