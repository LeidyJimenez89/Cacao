    <div class="col-md-6">
      <%= f.label :description , "Descripción"%><br>
      <%= f.text_area :description , class:"form-control"%>
    </div>
  </div>

  <div class="form-group col-md-12">
  	<%= link_to 'Cancelar', sublots_path ,:class =>"btn btn-danger" %>
  	<%= f.submit :class =>"btn btn-success"%>
