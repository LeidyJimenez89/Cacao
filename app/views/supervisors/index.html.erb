<%= javascript_include_tag 'jquery.dataTables.min', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'bootstrap', 'data-turbolinks-track' => true %>

<h1 class="x_title"><i class="glyphicon glyphicon-leaf titleicon"></i>Listar Supervisores</h1>
<%= link_to 'Crear supervisor', new_supervisor_path , :class =>"btn btn-default pull-right"%>
<table id="datatable" class="display datatable" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>CÃ©dula</th>
      <th>Nombre</th>
      <th>Estado</th>
      <th>Cargo</th>
      <th>Fecha de ingreso</th>
      <th>Fecha de retiro</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @supervisors.each do |supervisor| %>
      <tr>
        <td><%= supervisor.cc %></td>
        <td><%= supervisor.name.to_s + " " + supervisor.lastname %></td>
        <td>
          <% if supervisor.job.present? %>
              <%= supervisor.job.name %>
          <% end %>
        </td>
        <td><%= supervisor.state %></td>
        <td><%= supervisor.dateadmission %></td>
        <td><%= supervisor.retirementdate %></td>
        <td>
        <%= link_to 'Ver', supervisor,:class =>"btn btn-default btn-sm"  %>
        <%= link_to 'Editar', edit_supervisor_path(supervisor),:class =>"btn btn-default btn-sm"  %>
        <%= link_to 'Eliminar', supervisor,:class =>"btn btn-default btn-sm" , method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

